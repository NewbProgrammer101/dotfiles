#!/bin/bash

UPDATE="apt-get update"
UPGRADE="apt-get upgrade"
CHOICE="$1"

echo "Do you want to update your package list? (Case sensitive) [Y/n]: "
read $CHOICE

if [ "$CHOICE" == "Y" ]; then
	sudo $UPDATE
elif [ "$CHOICE" == "n" ]; then
	echo -ne "Ok."
else
	echo -ne "I'm sorry, I don't think I understand."
fi

echo "Do you want to upgrade your system? (Case sensitive) [Y/n]: "
read $CHOICE

if [ "$CHOICE" == "Y" ]; then
	sudo $UPGRADE
elif [ "$CHOICE" == "n" ]; then
	echo -ne "Ok."
else
	echo -ne "At least I feel good about your typing incompetence."
fi
